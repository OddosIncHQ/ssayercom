<odoo>
    <record id="view_mail_message_form" model="ir.ui.view">
        <field name="name">mail.message.viewer.form</field>
        <field name="model">mail.message.viewer</field>
        <field name="arch" type="xml">
            <form string="Mail Message">
                <group>
                    <field name="sender"/>
                    <field name="body"/>
                    <field name="received_date"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_mail_message_tree" model="ir.ui.view">
        <field name="name">mail.message.viewer.tree</field>
        <field name="model">mail.message.viewer</field>
        <field name="arch" type="xml">
            <tree string="Mail Messages">
                <field name="sender"/>
                <field name="received_date"/>
            </tree>
        </field>
    </record>
</odoo>
