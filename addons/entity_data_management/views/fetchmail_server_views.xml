<odoo>
    <record id="view_fetchmail_server_form" model="ir.ui.view">
        <field name="name">fetchmail.server.form</field>
        <field name="model">fetchmail.server</field>
        <field name="arch" type="xml">
            <form string="Fetchmail Server">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="server"/>
                        <field name="port"/>
                        <field name="user"/>
                        <field name="password" password="True"/>
                        <field name="is_ssl"/>
                        <field name="attach"/>
                        <field name="configuration"/>
                        <field name="server_type"/>
                        <field name="script"/>
                        <field name="state"/>
                        <field name="priority"/>
                        <field name="l10n_cl_is_dte"/>
                        <field name="l10n_cl_last_uid"/>
                        <field name="date"/>
                        <field name="original"/>
                        <field name="display_name"/>
                        <field name="object_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_fetchmail_server_tree" model="ir.ui.view">
        <field name="name">fetchmail.server.tree</field>
        <field name="model">fetchmail.server</field>
        <field name="arch" type="xml">
            <tree string="Fetchmail Servers">
                <field name="name"/>
                <field name="active"/>
                <field name="server"/>
                <field name="port"/>
                <field name="user"/>
                <field name="is_ssl"/>
                <field name="server_type"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_fetchmail_server_search" model="ir.ui.view">
        <field name="name">fetchmail.server.search</field>
        <field name="model">fetchmail.server</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="server"/>
                <field name="user"/>
                <field name="state"/>
            </search>
        </field>
    </record>
</odoo>
