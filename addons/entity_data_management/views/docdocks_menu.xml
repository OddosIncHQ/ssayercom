<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_docdocks_root" name="DocDocks" sequence="1" />

    <!-- Submenus -->
    <!-- Entity Data Management Submenu -->
    <menuitem id="menu_docdocks_entity_data_management" name="Entity Data Management" parent="menu_docdocks_root" sequence="1" action="action_entity_data_management" />
    <!-- File Uploads Submenu -->
    <menuitem id="menu_docdocks_file_uploads" name="File Uploads" parent="menu_docdocks_root" sequence="2" action="action_file_uploads" />
    <!-- Email Processing Submenu -->
    <menuitem id="menu_docdocks_email_processing" name="Email Processing" parent="menu_docdocks_root" sequence="3" action="action_email_processing" />

    <!-- Actions -->
    <!-- Entity Data Management Action -->
    <record id="action_entity_data_management" model="ir.actions.act_window">
        <field name="name">Entity Data Management</field>
        <field name="res_model">entity.data</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_entity_data_tree"/>
    </record>
    <!-- File Uploads Action -->
    <record id="action_file_uploads" model="ir.actions.act_window">
        <field name="name">File Uploads</field>
        <field name="res_model">entity.file.upload</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_entity_file_upload_form"/>
    </record>
    <!-- Email Processing Action -->
    <record id="action_email_processing" model="ir.actions.act_window">
        <field name="name">Email Processing</field>
        <field name="res_model">email.processing</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_email_processing_tree"/>
    </record>

    <!-- Views -->
    <!-- Entity Data Tree View -->
    <record id="view_entity_data_tree" model="ir.ui.view">
        <field name="name">entity.data.tree</field>
        <field name="model">entity.data</field>
        <field name="arch" type="xml">
            <tree string="Entity Data">
                <field name="name"/>
                <field name="vat"/>
                <field name="type"/>
                <field name="date_time"/>
                <field name="file_code"/>
                <field name="upload_datetime"/>
                <field name="upload_type"/>
            </tree>
        </field>
    </record>

    <!-- File Upload Form View -->
    <record id="view_entity_file_upload_form" model="ir.ui.view">
        <field name="name">entity.file.upload.form</field>
        <field name="model">entity.file.upload</field>
        <field name="arch" type="xml">
            <form string="Upload CSV File">
                <sheet>
                    <group>
                        <field name="file"/>
                        <field name="filename"/>
                    </group>
                    <footer>
                        <button string="Upload" type="object" name="action_upload_file" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Email Processing Tree View -->
    <record id="view_email_processing_tree" model="ir.ui.view">
        <field name="name">email.processing.tree</field>
        <field name="model">email.processing</field>
        <field name="arch" type="xml">
            <tree string="Email Processing">
                <field name="name"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
</odoo>
