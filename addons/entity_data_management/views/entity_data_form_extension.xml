
<odoo>
    <record id="view_form_entity_data_extension" model="ir.ui.view">
        <field name="name">entity.data.form.extension</field>
        <field name="model">entity.data</field>
        <field name="inherit_id" ref="entity_data_management.view_form_entity_data"/> <!-- AsegÃºrate de que esta vista existe -->
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="vat"/>
                        <field name="type"/>
                        <field name="date_time"/>
                        <field name="file_code"/>
                        <field name="file_attachment"/>
                        <field name="file_processed"/>
                        <field name="pdf_form_result"/>
                        <field name="upload_datetime"/>
                        <field name="upload_type"/>
                    </group>
                </sheet>
            </xpath>
        </field>
    </record>
</odoo>
