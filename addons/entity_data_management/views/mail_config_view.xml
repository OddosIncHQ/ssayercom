<odoo>
    <record id="view_mail_config_form" model="ir.ui.view">
        <field name="name">mail.config.form</field>
        <field name="model">mail.config</field>
        <field name="arch" type="xml">
            <form string="Mail Configuration">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="imap_server" required="1"/>
                        <field name="imap_port" required="1"/>
                        <field name="username" required="1"/>
                        <field name="password" password="True" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mail_config_tree" model="ir.ui.view">
        <field name="name">mail.config.tree</field>
        <field name="model">mail.config</field>
        <field name="arch" type="xml">
            <tree string="Mail Configuration">
                <field name="name"/>
                <field name="imap_server"/>
                <field name="imap_port"/>
                <field name="username"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
</odoo>
