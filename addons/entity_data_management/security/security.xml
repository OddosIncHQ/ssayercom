<odoo>
    <!-- Define Module Category -->
    <record id="module_category_entity_data_management" model="ir.module.category">
        <field name="name">Entity Data Management</field>
        <field name="description">Entity Data Management Module</field>
        <field name="sequence">10</field>
    </record>

    <!-- Define Groups -->
    <record id="group_entity_data_user" model="res.groups">
        <field name="name">Entity Data User</field>
        <field name="category_id" ref="module_category_entity_data_management"/>
    </record>

    <record id="group_entity_data_manager" model="res.groups">
        <field name="name">Entity Data Manager</field>
        <field name="category_id" ref="module_category_entity_data_management"/>
    </record>

    <!-- Access Control for Models -->
    <!-- Entity Data Model -->
    <record id="entity_data_user_rule" model="ir.rule">
        <field name="name">Entity Data User Rule</field>
        <field name="model_id" ref="model_entity_data"/>
        <field name="groups" eval="[(4, ref('group_entity_data_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="entity_data_manager_rule" model="ir.rule">
        <field name="name">Entity Data Manager Rule</field>
        <field name="model_id" ref="model_entity_data"/>
        <field name="groups" eval="[(4, ref('group_entity_data_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Access Control for Mail Config Model -->
    <record id="mail_config_user_rule" model="ir.rule">
        <field name="name">Mail Config User Rule</field>
        <field name="model_id" ref="model_mail_config"/>
        <field name="groups" eval="[(4, ref('group_entity_data_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="mail_config_manager_rule" model="ir.rule">
        <field name="name">Mail Config Manager Rule</field>
        <field name="model_id" ref="model_mail_config"/>
        <field name="groups" eval="[(4, ref('group_entity_data_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <!-- Access Rights -->
    <record id="access_entity_data_user" model="ir.model.access">
        <field name="name">Entity Data User Access</field>
        <field name="model_id" ref="model_entity_data"/>
        <field name="group_id" ref="group_entity_data_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="access_entity_data_manager" model="ir.model.access">
        <field name="name">Entity Data Manager Access</field>
        <field name="model_id" ref="model_entity_data"/>
        <field name="group_id" ref="group_entity_data_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="access_mail_config_user" model="ir.model.access">
        <field name="name">Mail Config User Access</field>
        <field name="model_id" ref="model_mail_config"/>
        <field name="group_id" ref="group_entity_data_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="access_mail_config_manager" model="ir.model.access">
        <field name="name">Mail Config Manager Access</field>
        <field name="model_id" ref="model_mail_config"/>
        <field name="group_id" ref="group_entity_data_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
