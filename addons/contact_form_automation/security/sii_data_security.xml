<odoo>
    <record id="sii_data_user" model="res.groups">
        <field name="name">SII Data User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="sii_data_manager" model="res.groups">
        <field name="name">SII Data Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('sii_data_user'))]"/>
    </record>

    <record id="model_sii_data_access_user" model="ir.model.access">
        <field name="name">sii_data access for users</field>
        <field name="model_id" ref="model_sii_data"/>
        <field name="group_id" ref="sii_data_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="model_sii_data_access_manager" model="ir.model.access">
        <field name="name">sii_data access for managers</field>
        <field name="model_id" ref="model_sii_data"/>
        <field name="group_id" ref="sii_data_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="view_sii_data_form" model="ir.ui.view">
        <field name="name">sii.data.form</field>
        <field name="model">sii.data</field>
        <field name="arch" type="xml">
            <form string="SII Data">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="vat"/>
                        <!-- Eliminar o reemplazar este campo -->
                        <!-- <field name="activity_date_deadline"/> -->
                    </group>
                    <group>
                        <field name="message_follower_ids"/>
                        <field name="message_partner_ids"/>
                        <field name="message_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
