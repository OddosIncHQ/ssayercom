<odoo>
    <!-- Tree view for CSV Field Definitions -->
    <record id="view_csv_field_definition_tree" model="ir.ui.view">
        <field name="name">csv.field.definition.tree</field>
        <field name="model">csv.field.definition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="field_name"/>
                <field name="field_type"/>
                <field name="mnemonic_name"/>
                <field name="row_number"/>
                <field name="column_number"/>
            </tree>
        </field>
    </record>

    <!-- Form view for CSV Field Definitions -->
    <record id="view_csv_field_definition_form" model="ir.ui.view">
        <field name="name">csv.field.definition.form</field>
        <field name="model">csv.field.definition</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="field_name"/>
                    <field name="field_type"/>
                    <field name="mnemonic_name"/>
                    <field name="description"/>
                    <field name="row_number"/>
                    <field name="column_number"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
